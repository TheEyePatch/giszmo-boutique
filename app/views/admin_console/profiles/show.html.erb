<section class="mt-16 p-10">
  <div class="header flex items-center justify-between">
    <h1 class="text-3xl font-semibold">Admin Profile</h1>
  </div>

  <div class="flex justify-end">
    <%= link_to 'Edit Profile', edit_admin_console_profile_path(current_admin),
      class: 'p-2 bg-yellow-500 text-white rounded shadow hover:bg-yellow-600'%>
  </div>

  <div class="flex items-center justify-around mx-auto text-lg border-r border-l p-5">
    <div>
      <%= image_tag current_admin.profile&.photo, class: 'rounded-full w-96' %>
    </div>

    <div class="w-100">
      <div class="my-5 flex flex-wrap">
        <h2 class="border rounded m-2 p-2">Username: <%= current_admin.username%></h2>
        <h2 class="border rounded m-2 p-2">Email: <%= current_admin.email%></h2>
      </div>

      <div class="my-5 flex flex-wrap">
        <h2 class="border rounded m-2 p-2">First Name: <%= current_admin.profile&.first_name%></h2>
        <h2 class="border rounded m-2 p-2">Last Name: <%= current_admin.profile&.last_name%></h2>
      </div>
    </div>
  </div>
</section>
