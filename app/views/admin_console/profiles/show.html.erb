<section class="mt-16 px-10" data-controller="profiles--admin-show">
  <div class="header">
    <%= render partial: "partials/breadcrumb", locals: {breadcrumbs: @breadcrumb.items}%>
    <h1 class="text-3xl font-semibold">Admin Profile</h1>
  </div>

  <div class="flex justify-end my-2">
    <%= link_to 'Edit Profile', edit_admin_console_profile_path(current_admin),
      class: 'p-2 bg-yellow-500 text-white rounded shadow hover:bg-yellow-600',
      data: {action: 'click->profiles--admin-show#showForm'} %>
  </div>

  <div class="flex items-center justify-around mx-auto text-lg border-r border-l p-5">
    <div>
      <%= image_tag @profile&.photo, class: 'rounded-full w-96' %>
    </div>

    <div data-profiles--admin-show-target="profileData" class="w-100">
      <div class="my-5">
        <h2 class="m-2 p-2">Username:</h2>
        <h2 class="m-2 p-2 border rounded"><%= current_admin.username%></h2>
      </div>
      
      <div class="my-5">
        <h2 class="m-2 p-2">Email:</h2>
        <h2 class="border rounded m-2 p-2"><%= current_admin.email%></h2>
      </div>

      <div class="my-5 flex flex-wrap">
        <h2 class="m-2 p-2">First Name:</h2>
        <h2 class="border rounded m-2 p-2"><%= @profile.first_name%></h2>

        <h2 class="m-2 p-2">Last Name:</h2>
        <h2 class="border rounded m-2 p-2"><%= @profile&.last_name%></h2>
      </div>
    </div>

    <div hidden data-profiles--admin-show-target="profileForm" class="w-100" >
      <%= render partial: 'form', locals: { profile: @profile } %>
    </div>
  </div>
</section>
