<section class="grid grid-cols-2 mx-auto">
  <section class="image-section relative flex flex-col justify-between px-4" data-controller="previews">
    <% if @product.images.present? %>
      <div id="main-image" class="relative h-4/6 w-auto my-2" data-previews-target="previewContainer">
        <%= image_tag @product.images.first, class: 'mx-auto border'%>
      </div>

      <div class="flex relative rounded overflow-x-hidden border border-grey-100">
        <%# LEFT ARROW %>
        <span class="z-10 text-gray-800 absolute p-2 left-0 text-4xl h-full flex items-center cursor-pointer bg-gray-100 bg-opacity-20 hover:bg-gray-200 bg-opacity-50"
          data-action="click->previews#selectLeftArrow"
        >
          <
        </span>

        <div class="flex overflow-x-scroll" data-previews-target="imageList">
          <% @product.images.each do |image| %>
            <%= image_tag image, id: image.id, class: 'w-40 m-1', data: { action: 'click->previews#selectImage' } %>
          <% end %>
        </div>

        <%# RIGHT ARROW %>
        <span class="z-10 text-gray-800 absolute p-2 right-0 text-4xl h-full flex items-center cursor-pointer bg-gray-100 bg-opacity-20 hover:bg-gray-200 bg-opacity-50"
          data-action="click->previews#selectRightArrow"
        >
          >
        </span>
      </div>
    <% else %>
      <div class="h-96 w-96 text-white text-4xl mx-auto border font-extrabold bg-gray-200 flex justify-center items-center">
        +
      </div>
    <% end %>
  </section>

  <section class="meta-data-section w-full px-2 min-w-128">
    <div class="text-lg p-2">
      <button>Edit</button>
      <h1 class="text-4xl font-semibold"><%= @product.name%></h1>

      <div class="mt-1">
        <span class="font-semibold tracking-wide">PRICE:</span>
        <span class="">PHP <%= @product.price %></span>
      </div>
    </div>

    <div class="p-2 text-lg">
      <h2 class="font-semibold tracking-wide">VARIANTS:</h2>

      <div class="flex">
        <% @product.variants&.split(',')&.each do |variant| %>
          <div class="border rounded-full w-10 h-10 mx-1" style="background-color:<%= variant%>;"></div>
        <% end %>
      </div>

      <div class="flex flex-wrap max-h-50 overflow-y-auto my-5">
        <% @product.image_variants.each do |image|%>
          <%= image_tag image, class: 'w-24 m-1 border hover:border-black rounded', data: { action: 'click->previews#selectImage' } %>
        <% end %>
      </div>
    </div>

    <div class="p-2 text-md">
      <h2 class="font-semibold tracking-wide">SIZES:</h2>
      <%# TODO: List sizes %>
    </div>

    <div class="p-2 text-md text-justify">
      <h2 class="font-semibold tracking-wide">DETAILS:</h2>
      <%= @product.detail %>
    </div>
  </section>
</section>
