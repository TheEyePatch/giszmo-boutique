<div id="<%= request.path.split('/').include?('admin_console') ? 'admin-nav' : 'nav' %>"
  class="<%= current_page?(root_path) ? 'text-white border-b border-opacity-70' : 'bg-white' %> transition-colors duration-300 flex z-20 justify-between fixed w-screen top-0 left-0 px-8 py-3 border-gray-300 shadow"
  >
  <%# binding.pry%>
  <h1 class="text-2xl font-serif font-medium">FuzzyFinds</h1>
  <ul class="flex justify-between min-w-min w-1/3"></ul>
  <% if request.path.split('/').include?('admin') %>
    <%= render 'partials/admin_header'%>
  <% elsif request.path.exclude?('admin') %>
    <li class="list-none">
      <%= link_to 'Home', root_path %>
    </li>
    <li class="list-none">
      <%= link_to 'Products', products_path%>
    </li>
    <li class="list-none">About</li>
  <% end %>
  </ul>
</div>


<script>
  <% if current_page?(root_path) %>
    var nav = document.getElementById('nav')

    window.addEventListener('scroll', (e) => {
      if(window.scrollY > 20) {
        nav.classList.add('bg-white')
        nav.style.color = '#000000'
        console.log(nav.style.color)
      } else {
        nav.classList.remove('bg-white')
        nav.classList.remove('text-gray-900')
        nav.style.color = '#ffffff'
      }
    })

  <% end %>
</script>